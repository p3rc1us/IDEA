<div class= "flex items-center justify-center">
<%= form_with(model: furniture_item) do |form| %>
  <% if furniture_item.errors.any? %>
    <div style="color: red">
      <h2>You have <%= pluralize(furniture_item.errors.count, "error") %> my friend:</h2>

      <ul>
        <% furniture_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :material, style: "display: block" %>
    <%= form.text_field :material %>
  </div>

  <div>
    <%= form.label :image_url, style: "display: block" %>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_field :price %>
  </div>

  <div class="mt-5 flex justify-center">
    <%= form.submit "Save Furniture", class: "bg-yellow-500 text-white p-2 rounded cursor-pointer transition-colors duration-300 ease-in-out hover:bg-blue-800" %>
  </div>
<% end %>
</div>